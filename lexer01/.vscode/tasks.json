{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "make debug",
            "command": "make",
            "args": [
                "debug"
            ]
        },
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=${workspaceFolder}/bin/valgrind.txt",
                "${workspaceFolder}/bin/main"
            ]
        }
	]
}