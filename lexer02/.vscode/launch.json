{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb: launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main",
            "args": [
                "main.bcc"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "launchCompleteCommand": "exec-run",
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "preLaunchTask": "make debug"
            }
        }
    ]
}